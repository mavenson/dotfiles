#!/usr/bin/zsh
#
alias zshenv="sudo vim /etc/zshenv"
alias .zshenv="vim /home/jas/.zshenv"
alias zshrc="vim /home/jas/.zshrc"
alias zprofile="vim /home/jas/.zprofile"
alias zalias="vim /home/jas/.zalias"
alias swaycfg="vim /home/jas/.config/sway/config"
alias alaccfg="vim /home/jas/.config/alacritty/alacritty.yml"
alias ls="colorls"
alias l="colorls -la"
alias dfgit="/usr/bin/git --git-dir=/home/jas/.cfg/ --work-tree=/home/jas"
alias rsource='source /home/jas/.zshenv && echo |lolcat -B -f 0.4 -S 4 -s 0 /home/jas/.zshenv'
alias waybarcfg="vim /home/jas/.config/waybar/config"
alias sources="sudo vim /etc/apt/sources.list"
alias update="sudo apt update |lolcat -f 0.7 -S 2 -s 0 && sudo apt upgrade |lolcat -B -f 0.4 -S 4 -s 0"
alias lcat="echo |lolcat -B -f 0.4 -S 8"
alias cat='pygmentize -g -O style=colorful,linenos=1'
