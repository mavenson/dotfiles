#!/usr/bin/zsh
#
alias zshenv="vim /home/jas/.zshenv"
alias zshrc="vim /home/jas/.zshrc"
alias zprofile="vim /home/jas/.zprofile"
alias zalias="vim /home/jas/.zalias"
alias swaycfg="vim /home/jas/.config/sway/config"
alias alaccfg="vim /home/jas/.config/alacritty/alacritty.yml"
alias ls="colorls"
alias l="colorls -la"
alias dfgit="/usr/bin/git --git-dir=/home/jas/.cfg/ --work-tree=/home/jas"
alias rsource="echo | source /home/jas/.zalias |  lolcat && echo | source /home/jas/.zshrc | lolcat -B -f 0.4 -S 4 -s 0"
alias waybarcfg="vim /home/jas/.config/waybar/config"
alias sources="sudo vim /etc/apt/sources.list"
alias update="sudo apt-get update | lolcat -f 0.7 -S 2 -s 0 && sudo apt-get upgrade | lolcat -B -f 0.4 -S 4 -s 0"
alias lcat="echo | lolcat -B -f 0.4 -S 8"
alias cat="pygmentize -g -O style=colorful,linenos=1"
alias pswd='sudo vim /etc/passwd'
alias restart='sudo systemctl -i reboot'
alias env="env | lolcat"
alias install="echo lolcat | sudo apt-get install"
alias jtree="cat | tree -C | more"
alias jcfg="cd /home/jas/.config && ls -a"
alias jbld="cd /home/jas/build && ls -a"
alias jscr="cd /home/jas/script && ls -a"
alias jcargo="cd /home/jas/.cargo/ && ls -a"
alias autorm="sudo apt-get autoremove | lolcat --bg -f .3 -s 8  -S 1"
